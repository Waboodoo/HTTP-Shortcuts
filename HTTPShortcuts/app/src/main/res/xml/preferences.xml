<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/settings_title_basic">

        <com.afollestad.materialdialogs.prefs.MaterialListPreference
            android:defaultValue="run"
            android:entries="@array/click_behaviors"
            android:entryValues="@array/click_behaviors_values"
            android:icon="@drawable/settings_click"
            android:key="click_behavior"
            android:persistent="true"
            android:title="@string/settings_click_behavior"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_title_import_export">

        <com.afollestad.materialdialogs.prefs.MaterialPreference
            android:icon="@drawable/settings_import"
            android:key="import"
            android:title="@string/settings_import"/>
        <com.afollestad.materialdialogs.prefs.MaterialPreference
            android:icon="@drawable/settings_export"
            android:key="export"
            android:title="@string/settings_export"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_about">

        <com.afollestad.materialdialogs.prefs.MaterialPreference
            android:icon="@drawable/settings_version"
            android:key="version"
            android:title="@string/settings_version"/>
        <com.afollestad.materialdialogs.prefs.MaterialPreference
            android:icon="@drawable/settings_mail"
            android:key="mail"
            android:summary="@string/settings_mail_summary"
            android:title="@string/settings_mail"/>
        <com.afollestad.materialdialogs.prefs.MaterialPreference
            android:icon="@drawable/settings_store"
            android:key="play_store"
            android:summary="@string/settings_play_store_summary"
            android:title="@string/settings_play_store"/>
        <com.afollestad.materialdialogs.prefs.MaterialPreference
            android:icon="@drawable/settings_github"
            android:key="github"
            android:summary="@string/settings_github_summary"
            android:title="@string/settings_github"/>
        <com.afollestad.materialdialogs.prefs.MaterialPreference
            android:icon="@drawable/ic_licenses"
            android:key="licenses"
            android:summary="@string/settings_licenses_summary"
            android:title="@string/settings_licenses"/>

    </PreferenceCategory>

</PreferenceScreen>